{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "strict": false,
    "module": "amd",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["es2020", "dom", "esnext.asynciterable"],
    "typeRoots": [
      "./node_modules/@oracle/oraclejet/dist/types",
      "./node_modules/@types"
    ],
    "paths": {
      "ojs/*": ["./node_modules/@oracle/oraclejet/dist/types/*"],
      "@oracle/oraclejet-preact/*": [
        "./node_modules/@oracle/oraclejet-preact/*"
      ],
      "oj-c/*": ["./node_modules/@oracle/oraclejet-core-pack/oj-c/types/*"],
      "preact": ["./node_modules/@oracle/oraclejet/dist/js/libs/preact"],
      "react": ["./node_modules/preact/compat"],
      "react-dom": ["./node_modules/preact/compat"]
    },
    "declaration": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["./src/**/*"]
}
